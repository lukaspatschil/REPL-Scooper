{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // "@typescript-eslint/class-name-casing": "warn", //is not working
    "@typescript-eslint/semi": "warn",
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "semi": "error",
    "quotes": ["error", "single"]
  },
  "ignorePatterns": ["**/*.d.ts"]
}
